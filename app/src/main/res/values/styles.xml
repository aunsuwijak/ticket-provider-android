<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#FFF</item>
        <item name="android:textColor">@color/colorNobelGrey</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="colorPrimary">@color/colorNobelGrey</item>
        <item name="colorPrimaryDark">@color/colorNobelGrey</item>
        <item name="colorAccent">@color/colorNobelGrey</item>

        <item name="editTextStyle">@style/EditText</item>

        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorNobelGrey</item>
        <item name="android:textSize">@dimen/app_edit_text_size</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/app_header_text_size</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/app_label_text_size</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>
