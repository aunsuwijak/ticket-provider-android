<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
    </style>
    
    <style name="EditTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#BDBDBD</item>
        <item name="android:backgroundTint">#BDBDBD</item>
    </style>
    
    <style name="ButtonPrimary" parent="@style/Base.Widget.AppCompat.Button">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_height">58dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:titleTextColor">#FFF</item>
    </style>
</resources>
